{
	"name": "bio-signal-visualizer",
	"productName": "Bio Signal Visualizer",
	"version": "0.0.0",
	"description": "Bio Signal Visualizer App",
	"license": "MIT",
	"repository": "akshaybaweja/bio-signal-visualizer",
	"author": {
		"name": "Akshay Baweja",
		"email": "akshaybaweja.1996@gmail.com",
		"url": "https://akshaybaweja.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np",
		"dist-macos": "electron-builder --macos"
	},
	"dependencies": {
		"electron-debug": "^3.0.0",
		"electron-context-menu": "^0.15.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0"
	},
	"devDependencies": {
		"electron": "^9.0.5",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.akshaybaweja.bio-signal-visualizer",
		"mac": {
			"category": "public.app-category.utilities",
			"darkModeSupport": false
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility;Engineering"
		}
	}
}
